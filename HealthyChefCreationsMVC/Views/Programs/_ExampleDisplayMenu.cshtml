@model  HealthyChefCreationsMVC.CustomModels.ProgramDetailsViewModel
@using HealthyChef.Common
@*Program plan menu start*@
<div class="col-title">This Week's Menus@*Example Menu Your selected plan menu*@</div>
<table id="plan-mealtypes" cellpadding="0" cellspacing="0" class="form-select-menu  col-height">
    <tbody id="defaultmenu" style="display:none;"><tr><td style="text-align: center;color:forestgreen;"><b>NO DEFAULT MENU</b></td></tr></tbody>
    <tbody id="planmenu">
        @if (Model.programdefaultmenudetails.Count > 0)
