                        <td class="">
                            <span class="meals_menu">Breakfast</span>

                            <br />
                            <img id="imageurl" class="img-responsive" src="@defaultplan.MenuItemImageUrl" />
                        </td>
                        <td class="menuitems">
                            <div class="menu_data">
                                <b>@defaultplan.MenuItemName</b><br />
                                                                <p> @defaultplan.Description</p>
                             
                                @*<b>Nutrition Info:</b><br />*@
                                                                <strong >
                                                                    <hr />
