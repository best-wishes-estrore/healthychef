<div id="header" style="display: none;">
    <div class="page_gap container">
        @*shell*@
        <div class="top-navigation Desktop_view">
            <table border="0" width="100%">
                <tr>
                    <td align="left">
                        <div id="logo">
                            <a href="/" title="Healthy Chef">
                                @*Healthy Chef*@
                                <img src="/App_Themes/HealthyChef/Images/Healthy-Chef-Logo.png" />
                            </a>
                        </div>
                    </td>
                    <td align="center">
                        <span>
                            <a href="tel:18665752433" class="phoneno">
                                @*<img alt="" src="/App_Themes/HealthyChef/images/icon-1.png" />*@
                                <i class="fa fa-phone"></i>1-866-575-2433
                            </a>
                        </span>
                    </td>
                    <td align="right">
                        <div>
                            <a href="@Url.Action("Index","Contactus")" class="btn btn-green">
                                @*<a href="/contact-us.aspx" class="btn btn-green">*@
                                @*<img alt="" src="/App_Themes/HealthyChef/images/icon-2.png" />*@ <i class="fa fa-envelope"></i><span class="mobile_del">Email</span>
                            </a>
                            @if (HttpContext.Current.User.Identity.IsAuthenticated == false)
                            {
                                <a id="alogin" href="@Url.Action("Login", "Home")" class="btn btn-green">
                                    @*<img alt="" src="/App_Themes/HealthyChef/images/gold-star.gif" />*@ <i class="fa fa-user"></i><span class="mobile_del">Login</span>
                                </a>
                                <input type="hidden" id="hdnauthenticate" value="false" />
                            }
                            @if (HttpContext.Current.User.Identity.IsAuthenticated == true)
                            {<input type="hidden" id="hdnauthenticate" value="true" /> <p>hai</p>
                                <a id="aProfile" class="btn btn-green" runat="server" visible="false" href="@Url.Action("Index", "Account")">
                                    @*<img alt="" src="/App_Themes/HealthyChef/images/icon-3.png" />*@ <i class="fa fa-user"></i><span class="mobile_del">Profile</span>
                                </a>
                                <a id="alogout" href="@Url.Action("Signout", "Home")" class="btn btn-green">
                                    @*<img alt="" src="/App_Themes/HealthyChef/images/gold-star.gif" />*@ <i class="fa fa-sign-out"></i><span class="mobile_del">Sign Out</span>
                                </a>
                            }
                            <a id="aCart" runat="server" class="@carthasitems btn btn-green" href="@Url.Action("Index","Cart")">
                                @*<img alt="" src="/App_Themes/HealthyChef/Images/icon-cart.png" />*@ <i class="fa fa-shopping-cart"></i><span class="mobile_del">Cart</span> (<b id="UserCartCountGlobal">@Model.CartCount</b>)
                            </a>
                            @if (Model.ShowAdminLink == true)
                            {
                                <a href="/admin" class="btn btn-green"><span>Admin</span></a>
                            }
                        </div>
                    </td>
                </tr>
            </table>
        </div>
    </div>
</div>

<div id="slider" style="display:none">

    @foreach (var image in Model.listImages)
    {
        <div class="slide" style="display: block;">
            <img class="fullscreen" src="@Url.Content(image.imageURL)" style="border-width: 0px; width: 1449px;" />
        </div>
    }
</div>

<script>
    $(document).ready(function () {
        if ($('#hdnauthenticate').val() == "false") {
            $('.top-navigation').addClass('Extracol');
            $('.navbar-toggle').addClass('mobile-toggle-navbar');
            $('#alogin').css('visibility', 'visible');
            $('#alogout').css('visibility', 'hidden');
            $('#aProfile').css('visibility', 'hidden');
        }
        else {
            $('.top-navigation').removeClass('Extracol');
            $('#alogin').css('visibility', 'hidden');
            $('#alogout').css('visibility', 'visible');
            $('#aProfile').css('visibility', 'visible');
        }
    });
</script>
