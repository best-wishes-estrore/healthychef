@model  HealthyChefCreationsMVC.CustomModels.LoginViewModel.RegistrationModel
@using (Html.BeginForm("RegisterModel", "Home", FormMethod.Post))
{
    <div class="col-md-5">
        <div class="register">
            <h2 style="margin-bottom:12px;margin-top:20px;" class="registermobile">
                Register <span>
                    <button type="button" id="fbbtn" class="btn btn-primary" style="background: #4267b2;margin-left:17px;border: 1px solid #4267b2;border-radius: 0px;padding:5px 8px 0px 1px;font-size:12px" onclick="javascript:login();"><i class="fa fa-facebook-square" aria-hidden="true" style="padding: 0px 8px;font-size: 20px;float: left;"></i><p style="float: left;color: #fff;">Register with Facebook</p></button>
                </span>
            </h2>
            <div class="form-group ">
                <div class="col-md-6 " style="padding-left:0px">
                    <label class="control-label">First Name</label><br />
                    @Html.TextBoxFor(m => m.FirstName)
                    @Html.ValidationMessageFor(m => m.FirstName)
                </div>
                <div class="col-md-6 " style="padding:0px">
                    <label class="control-label">Last Name</label><br />
                    @Html.TextBoxFor(m => m.LastName)
                    @Html.ValidationMessageFor(m => m.LastName)
                </div>
            </div>
           

            <div class="clearfix"></div>
            <div class="form-group">
                @*@Html.LabelFor(m => m.Email, new { @class = "col-md-2" })*@
                <label class="control-label" for="Email">Email:</label><br />
                @Html.TextBoxFor(m => m.Email, new { @class = "textbox" })
                <span id="Emailcheck" style="color:red;" class="validation_error">@ViewBag.EmailChecked</span>
                @Html.ValidationMessageFor(m => m.Email)
            </div>
            <div class="clearfix"></div>
            <div class="p-10 cms-login" style="margin-left: 38.6%;display:none">
                @Html.RadioButtonFor(m => m.CustomerType, 0, new { @class = "pull-left", @Checked = "checked" })<p>I am a new customer</p>
                @*@Html.RadioButtonFor(m => m.CustomerType, 1, new {  @class = "pull-left" })<p>I am a returning customer</p>*@
            </div>
            <div class="form-group" style="display:none">
                <label class="control-label" for="Password">Password:</label><br />
                @Html.PasswordFor(m => m.Password, new { @class = "textbox cms-password" })
                @Html.ValidationMessageFor(m => m.Password)
            </div>

            <div class="p-10">
                <button type="submit" class="btn-green" style="float:left">Continue</button>

            </div>
            @*<div class="p-10">

            <fb:login-button data-size="xlarge" data-button-type="continue_with" autologoutlink="true" perms="read_friendlists, create_event, email, publish_stream"></fb:login-button>
            @*<button type="button" class="btn-blue">Sign up with Facebook</button>
        </div>*@
        </div>
    </div>
}