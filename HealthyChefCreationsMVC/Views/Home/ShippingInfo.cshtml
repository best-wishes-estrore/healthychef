                    @Html.ValidationMessageFor(m => m.State)
                </div>
                <div class="wm-field">
                    @Html.LabelFor(m => m.PostalCode, new { @class = "col-md-2" })
                    @Html.TextBoxFor(m => m.PostalCode, new { @class = "col-md-6" })
